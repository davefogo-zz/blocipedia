<% if collaborator = user.collaborator_to(wiki) %>
  <%= link_to collaborator_path(:controller => "collaborators", :action => "destroy", :wiki_id => wiki.id, :id => collaborator.id),  class: 'btn btn-danger', method: :delete do %>
    Remove
  <% end %>
<% else %>
  <%= link_to collaborators_path(:controller => "collaborators", :action => "create", :user_id => user.id, :wiki_id => wiki.id),  class: 'btn btn-primary', method: :post do %>
    Add
  <% end %>
<% end %>
