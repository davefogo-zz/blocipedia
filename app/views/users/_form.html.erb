<h2>Sign Up</h2>

<div class="row">
  <div class="col-md-8">
    <%= form_for @wiki do |f| %>
      <% if @wiki.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@wiki.errors.count, "error") %>.</h4>
          <ul>
            <% @wiki.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_group_tag(@wiki.errors[:name]) do %>
        <%= f.label :title %>
        <%= f.text_field :title, autofocus: true, class: 'form-control', placeholder: "Enter title" %>
      <% end %>
      <%= form_group_tag(@wiki.errors[:email]) do %>
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', placeholder: "Enter body" %>
      <% end %>

      <div class="form-group">
        <%= f.label :private, class: 'checkbox' do %>
          <%= f.check_box :private %> Private wiki
        <% end %>
      </div>

      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
